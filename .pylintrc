[MASTER]

# Could turn errors only on if necessary, leave off for now.
# errors-only=yes

# Ignore migrations directory
ignore=migrations

[FORMAT]

# String used as indentation unit. This is usually " " (4 spaces) or "\t" (1
# tab). We use two spaces however.
indent-string='  '

# lower_with_underscore setting for method names with capwords for tests.
method-rgx=([a-z_][a-z0-9_]{2,30}|test[A-Z][a-zA-Z0-9]{2,30}|assert[A-Z][a-zA-Z0-9]{2,30}|setUp|tearDown)$

# lower_with_underscore setting for function names with capwords for tests.
function-rgx=([a-z_][a-z0-9_]{2,30}|test[A-Z][a-zA-Z0-9]{2,30}|assert[A-Z][a-zA-Z0-9]{2,30}|setUp|tearDown)$
